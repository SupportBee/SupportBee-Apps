<form>
  {{#each tickets}}
    {{#ticket}}
      <ol>

        <li>
          <label for="project">Select Project</label>
          <select name="projects_select"></select>
        </li>


        <li class="title">
          <label for="title">Title</label>
          <input name="title" value="{{subject}}">
        </li>

        <li class="description">
          <label for="description">Description</label>
          <textarea name="description">
  {{content.text}} \n
  https://{{../../company.subdomain}}.supportbee.com/tickets/{{id}}
          </textarea>
        </li>

        <div class="assign" style="display:none;">
          <li >
            <label for="assign_to">Assign To</label>
            <select name="assign_to">
              <option value="none">Don't Assign</option>
            </select>
          </li>
        </div>
        <li>
          <a class="submit btn btn-primary">Send to Basecamp</a>
          <a class="cancel btn">Cancel</a>
        </li>
      </ol>
    {{/ticket}}
  {{/each}}
</form>
