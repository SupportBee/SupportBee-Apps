<!-- 
  Set overlay: true in the config
  This file will be rendered on the overlay
  The below code sample is taken from the Pivotal App
-->

<h3>Create a Snippet</h3>
{{#each tickets}}
  {{#ticket}}
    <ol>
      <li>
        <label for="name">Snippet Name</label>
        <input name="name">
      </li>
      <li>
        <label for="text">Snippet Text</label>
        <textarea name="text">

        </textarea>
      </li>
      <li>
        <label for="tags">Snippet Tags</label>
        <input name="tags">
      </li>
    </ol>
  {{/ticket}}
{{/each}}
